<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.emergency">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyHealthActivity"
            android:label="@string/myHealth_button" />
        <activity
            android:name=".SearchHospitalActivity"
            android:label="@string/by_hospital_name" />
        <activity
            android:name=".SearchDepartmentActivity"
            android:label="@string/by_department_name" />
        <activity
            android:name=".MyHealth2Activity"
            android:label="@string/myHealth2_button" />
        <activity
            android:name=".EmergencyActActivity"
            android:label="@string/emergency_act_button" />
        <activity
            android:name=".NearbyActivity"
            android:label="@string/near_by_button" />
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>